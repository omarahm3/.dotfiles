#!/bin/bash

file=$1
selected=$(fzf < ~/.tmux-scripts/"$file")

if [[ -z $selected ]]; then
    exit 0
fi

pretty_name=$(echo "$selected" | cut -d ' ' -f 1)

tmux-windowizer "$pretty_name"
tmux kill-window -t "$selected"
tmux-windowizer "$pretty_name" "clear && $selected && notify-send -a tmux \"'$selected' is done\""
