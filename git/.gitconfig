[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default
	tool = vscode

[user]
  email = me@mrg.sh
  name = Omar Ahmed
[init]
  defaultBranch = master
[pull]
  rebase = false
[core]
  editor = nvim
[remote "origin"]
  proxy =
[gc]
  reflogExpire = 200
  reflogExpireUnreachable = 90

[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[color]
	ui = auto
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE
[cola]
	theme = flat-light-green
	icontheme = light
	startupmode = folder
